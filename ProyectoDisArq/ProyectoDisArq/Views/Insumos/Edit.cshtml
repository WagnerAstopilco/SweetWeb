@model ProyectoDisArq.Models.ViewModels.InsumoVM
@{
    ViewData["Title"] = "Editar Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Insumos" asp-action="Edit" method="post">
                    <input class="form-control" asp-for="Insumo.InsumoId" hidden />
                    <div class="mb-2">
                        <label>Nombre</label>
                        <input class="form-control" asp-for="Insumo.Name" />
                        <span asp-validation-for="Insumo.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Stock</label>
                        <input class="form-control" asp-for="Insumo.Stock" />
                        <span asp-validation-for="Insumo.Stock" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Unidad de medida</label>
                        <select class="form-select" asp-for="Insumo.Unidad_Medida">
                            <option disabled selected>--Seleccionar categoría--</option>
                            <option value="Kg">Kg</option>
                            <option value="Kg">g</option>
                            <option value="Kg">mg</option>
                        </select>
                        <span asp-validation-for="Insumo.CategoriaId" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        <label>Descripción</label>
                        <textarea class="form-control" asp-for="Insumo.Descripcion" id="descripcion"></textarea>
                        <span asp-validation-for="Insumo.Descripcion" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Categoría</label>
                        <select class="form-select" asp-for="Insumo.CategoriaId" asp-items="Model.ListCategorias">
                            <option disabled selected>--Seleccionar categoría--</option>
                        </select>
                        <span asp-validation-for="Insumo.CategoriaId" class="text-danger"></span>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success mb-1 mb-md-0">
                            <i class="bi bi-floppy"></i>&nbsp;Guardar
                        </button>
                        <a asp-controller="Categorias" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#descripcion').summernote();
        });
    </script>
}
