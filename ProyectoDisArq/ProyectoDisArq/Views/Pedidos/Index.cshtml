@using ProyectoDisArq.Utilities

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole(DS.Admin_Role))
{
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h2>@ViewData["Title"]</h2>
                        <div>
                            <a asp-controller="Pedidos" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-square"></i>Nuevo
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped" id="table_pedidos">
                            <thead>

                                <tr>
                                    <th>Opciones</th>
                                    <th>Titular</th>
                                    <th>Fecha Entrega</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole(DS.Vendedor_Role) || User.IsInRole(DS.Pastelero_Role))
{
<h2>Estas en las ventas</h2>    
}

@section Scripts {
    <script src="~/js/pedido.js"></script>
}
