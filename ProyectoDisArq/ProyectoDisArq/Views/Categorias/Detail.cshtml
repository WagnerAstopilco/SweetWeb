@model ProyectoDisArq.Models.Categoria
@{
    ViewData["Title"] = "Detalle Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="row py-2 border-bottom">
                    <div class="col-2 fw-bold text-end">Nombre</div>  
                    <div class="col">@Model.Nombre</div>
                </div>
                <div class="row py-2 border-bottom bg-light">
                    <div class="col-2 fw-bold text-end">Descripción</div>
                    <div class="col">@Html.Raw(Model.Descripcion)</div>
                </div>
                <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4 p-3">
                    <a asp-controller="Categorias" asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i>&nbsp;Editar
                    </a>
                    <a asp-controller="Categorias" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-return-left"></i>&nbsp;Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>