@using ProyectoDisArq.Utilities
@{
    ViewData["Title"] = "SweetWeb";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoDisArq.styles.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Iconos de bootstrap-->
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


    @* Datatables *@
    <link href="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.css" rel="stylesheet">

    @* Toastr *@
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand col-lg-1 col-md-1 col-sm-1" asp-area="" asp-controller="Productos" asp-action="Home"><img src="~/media/logo.png" style="width:100%" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        @if (User.IsInRole(DS.Cliente_Role) || User.IsInRole(DS.Admin_Role) == false && User.IsInRole(DS.Pastelero_Role) == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Tortas">Tortas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Chessecakes">Chessecakes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Pies">Pies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Galletas">Galletas</a>
                            </li>
                        }
                        @if (User.IsInRole(DS.Admin_Role))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorías</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Complementos" asp-action="Index">Complementos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Insumos" asp-action="Index">Insumos</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AppUsers" asp-action="Index">Usuarios</a>
                        </li>
                        } 
                        @if (User.IsInRole(DS.Admin_Role) || User.IsInRole(DS.Pastelero_Role))
                        {
                            @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reportes" asp-action="Index">Reportes</a>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Recetas" asp-action="Index">Recetas</a>
                            </li>
                        }
                        @if (User.IsInRole(DS.Admin_Role) || User.IsInRole(DS.Pastelero_Role) || User.IsInRole(DS.Vendedor_Role))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedidos" asp-action="Index">Ventas</a>
                            </li>
                        }
                        
                    </ul>
                    @if (User.IsInRole(DS.Cliente_Role))
                    {
                        <div class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Index"><i class="bi bi-cart4"></i></a>
                        </div>
                    }
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_notifications"/>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer border-top text-center text-lg-start  text-muted">
        <!-- Section: Social media -->
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class=" text-center text-md-start mt-2">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class=" footer-home col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="bi bi-house-door me-3"></i>SweetWeb
                        </h6>
                        <p class="footer-home">
                            Encuentra aqui tus más dulces momentos.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Servicios
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Tortas personalizadas</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Artículos de reposteria</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Recetario</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Enlace útiles
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Documentos</a>
                        </p>                        
                        <p>
                            <a asp-controller="Home" asp-action="Privacy" class="text-reset">Privacidad</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Ayuda</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Contáctenos</h6>
                        <div class="me-5 d-none d-lg-block">
                            <span>Nuestras redes:</span>
                        </div>
                        <p>
                            <a href="" class="me-4 text-reset"><i class="bi bi-facebook"></i></a>
                            <a href="" class="me-4 text-reset"><i class="bi bi-twitter"></i></a>
                            <a href="" class="me-4 text-reset"><i class="bi bi-instagram"></i></a>
                            <a href="" class="me-4 text-reset"><i class="bi bi-tiktok"></i></a>
                        </p>

                        <p><i class="bi bi-house me-3"></i> Cajamarca- 06002, Perú</p>
                        <p>
                            <i class="bi bi-envelope me-3"></i>
                            info@example.com
                        </p>
                        <p><i class="bi bi-telephone me-3"></i> 961910812</p>
                        <p><i class="bi bi-telephone me-3"></i> 948571138</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            &copy; 2024 Todos los derechos reservados:
            <a class="text-reset fw-bold" href="#">SweetWeb.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*Datatables*@
    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.js"></script>
    @*SeewtAlert*@
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    @* toastr *@
    <script src="~/lib/toastr/toastr.min.js"></script>
    @*include summernote css/js *@
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
