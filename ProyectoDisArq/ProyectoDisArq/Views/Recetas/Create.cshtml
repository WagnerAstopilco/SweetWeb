@model ProyectoDisArq.Models.Receta
@{
    ViewData["Title"] = "Crear Receta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Recetas" asp-action="Create" method="post">
                    <div class="mb-2">
                        <label>Nombre</label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-2">
                        <label>Descripción</label>
                        <textarea class="form-control" asp-for="Descripcion" id="descripcion"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Preparación</label>
                        <textarea class="form-control" asp-for="Preparacion" id="preparacion"></textarea>
                        <span asp-validation-for="Preparacion" class="text-danger"></span>
                    </div>
                    <div class="d-grid column-gap-2 d-md-block offset-0 offset-md-3 offset-lg-4">
                        <button type="submit" class="btn btn-success mb-1 mb-md-0">
                            <i class="bi bi-floppy"></i>&nbsp;Guardar
                        </button>
                        <a asp-controller="Recetas" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-return-left"></i>&nbsp;Cancelar
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#descripcion').summernote();
        });
        $(document).ready(function () {
            $('#preparacion').summernote();
        });
    </script>
}